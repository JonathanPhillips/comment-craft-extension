{
  "manifest_version": 2,
  "name": "Comment Craft (Simple Test)",
  "version": "1.0.0",
  "description": "Simple test version of Comment Craft",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": ["content-simple.js"],
      "run_at": "document_end"
    }
  ],
  
  "browser_action": {
    "default_title": "Comment Craft Test"
  },
  
  "icons": {
    "48": "data:image/svg+xml;base64,"
  }
}